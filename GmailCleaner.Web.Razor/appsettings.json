{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "GoogleApiSettings": {
    "GrantType": "authorization_code",
    "ClientId": "",
    "ClientSecret": "",
    "RedirectUri": "https://localhost:8080/auth",
    "GoogleAuthUrl": "https://accounts.google.com/o/oauth2/auth?access_type=offline",
    "GoogleTokenUrl": "https://oauth2.googleapis.com/token",
    "Scope": "https://mail.google.com/ https://www.googleapis.com/auth/userinfo.profile openid offline_access",
    "GoogleUserInfoUrl": "https://www.googleapis.com/oauth2/v3/userinfo",
    "MessagesRoute": "/gmail/v1/users/{0}/messages"
  },
  "ConnectionStrings": {
    "GmailCleaner": "Data Source=.;Initial Catalog=GmailCleaner;Integrated Security=true;TrustServerCertificate=true;"
  },

  "AllowedHosts": "*"
}
